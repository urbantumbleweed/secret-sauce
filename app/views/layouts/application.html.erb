          $('i.fa').removeClass('fa-arrow-circle-right').addClass('fa-arrow-circle-left');         
      } else {
          $(menu).show().animate({width: 300}, 500);
          $('i.fa').removeClass('fa-arrow-circle-left').addClass('fa-arrow-circle-right');

      }
  });


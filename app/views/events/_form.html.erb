<%= form_for @event do |f| %>
<div class="form-group">
  <div class="row">
    <div class="col-md-5 col-md-offset-2">
  <label>Type of Event:</label>
  <%= f.text_field :name %>
  </div>
  <div class="col-md-3">
  <label>Date:</label>
  <%= f.date_field :date %>
  </div>
</div>
</div>
  <%= f.hidden_field :school_id, value: current_user.school.id %><br />
<div class="form-group">
  <label>Description:</label>
  <%= f.text_area :description, :class => "input-large" %><br />
</div>
<div class="form-group">
  <label>What was most successful?</label>
  <%= f.text_area :success, :class => "input-large" %><br />
</div>
<div class="form-group">
  <label>What didn't work out?</label>
  <%= f.text_area :failure, :class => "input-large" %><br />
</div>
<div class="form-group">
  <label>What advice do you have for other chapters?</label>
  <%= f.text_area :advice, :class => "input-large" %><br />
</div>

  <%= f.submit "Save", :class => "btn btn-primary btn" %>

<% end %>

<!--  SEE YOUR RESPONSIBILITIES *******************************************************      -->
<div class="row">
	<div class="col-md-8 col-md-offset-2 profile">
		<h1>So, <%= current_user.first_name %>... you're the <%= current_user.position.name %> at <a class="link" href="schools/<%= current_user.school.shortname %>"><%= current_user.school.name %></a>.</h1>

	<p>You're responsible for: </p>


	<% case current_user.position.shortname %>
		<% when 'editor-in-chief' %>
		<h4>being awesome</h4>

		<% when 'managing-editor' %>
		<h4>being cool</h4>

		<% when 'copy-editor' %>
		<h4>being wonderful</h4>
		
		<% when 'writer' %>
		<h4>being rad</h4>
		
		<% when 'national-contributor' %>
		<h4>being around</h4>
	
		<% when 'photo-director' %>
		<h4>makin' shit pretty</h4>

		<% else %>
		<h4>... who do you think you are?</h4>

	<% end %>

	<!--  SEE YOUR PROGRESS *******************************************************      -->



	<!--  BEGINYOUR TRACK *******************************************************      -->

	<% if current_user.position == 'national contributor' %>

	<% else %>
	<% if current_user.position.next_page(current_user.status.pages.last) %>
		<a class="btn btn-primary btn-lg" href="<%= current_user.position.track(@page) %>/<%= current_user.position.shortname %>/<%= current_user.position.next_page(current_user.status.pages.last).shortname %>">My Track</a>
	<% else %>
	<a class="btn btn-primary btn-lg" href="<%= current_user.position.track(@page) %>/<%= current_user.position.shortname %>/<%= current_user.position.pages.first.shortname %>">My Track</a>
	<% end %>
	<% end %>

	</div>
<!-- QUICKLINKS AND STUFF ON YOUR SCHOOL *******************************************************      -->


</div>





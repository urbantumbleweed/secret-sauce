<h2>Give us your info, first.</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email"  %>
  </div>


  <div class="form-group">
  <%= f.text_field :first_name, :autofocus => true, :placeholder => "First Name"  %></div>

  <div class="form-group">
  <%= f.text_field :last_name, :autofocus => true, :placeholder => "Last Name"   %></div>

  <div class="form-group">
  <%= f.text_field :phone_number, :autofocus => true, :placeholder => "Phone Number"  %></div>

  <div class="form-group">
  <%= f.password_field :passwor, :placeholder => "Password"   %></div>

  <div class="form-group">
  <%= f.password_field :password_confirmation, :placeholder => "Confirm Password"   %></div>

<% if @schools %>
  <div class="form-group"><%= f.collection_select(:school_id, @schools, :id, :name) %></div>
  <div class="form-group"><%= select_tag(:position_id, options_from_collection_for_select(@positions, "id", "name") ) %></div>
<% end %>



  <div><%= f.submit "Sign up", :class => "btn btn-primary btn" %></div>
<% end %>

<%= render "devise/shared/links" %>

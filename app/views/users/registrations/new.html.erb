<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <label for="email">Email</label>
  <%= f.email_field :email, :autofocus => true %>
  </div>


  <div class="form-group">
    <label for="first_name">First Name</label>
  <%= f.text_field :first_name, :autofocus => true %></div>

  <div class="form-group">
        <label for="last_name">Last Name</label>
  <%= f.text_field :last_name, :autofocus => true  %></div>

  <div class="form-group">
        <label for="phone_number">Phone Number</label>
  <%= f.text_field :phone_number, :autofocus => true %></div>

  <div class="form-group">
        <label for="password">Password</label>
  <%= f.password_field :password  %></div>

  <div class="form-group">
        <label for="password">Password Confirmation</label>
  <%= f.password_field :password_confirmation  %></div>

<% if @schools %>
  <div class="form-group"><%= f.collection_select(:school_id, @schools, :id, :name) %></div>
  <div class="form-group"><%= select_tag(:position_id, options_from_collection_for_select(@positions, "id", "name") ) %></div>
<% end %>



  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>

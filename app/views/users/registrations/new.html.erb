<h2>Sign up !!!!!</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name, :autofocus => true %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

<% if @schools %>
  <div><%= f.collection_select(:school_id, @schools, :id, :name) %></div>
  <div><%= select_tag(:position_id, options_from_collection_for_select(@positions, "id", "name") ) %></div>
<% end %>



  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
